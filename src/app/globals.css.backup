/* ===== blocks.css inspired design system ===== */
:root {
  /* Colors - flat and soft */
  --bg-paper: #fafafa;
  --bg-white: #ffffff;
  --bg-mint: #d4f4dd;
  --bg-green: #b8e6c4;
  --bg-yellow: #fff9c4;
  --bg-blue: #dbeafe;
  --bg-gray: #f5f5f5;

  /* Text colors */
  --text-primary: #1a1a1a;
  --text-secondary: #525252;
  --text-muted: #737373;

  /* Accent colors */
  --accent-green: #4ade80;
  --accent-mint: #6ee7b7;
  --accent-blue: #60a5fa;
  --accent-red: #ef4444;
  --accent-yellow: #fbbf24;

  /* Border */
  --border-color: #1a1a1a;
  --border-width: 3px;

  /* Shadows - hard, no blur */
  --shadow-offset: 4px;
  --shadow-color: #1a1a1a;

  /* Spacing */
  --space-xs: 4px;
  --space-sm: 8px;
  --space-md: 16px;
  --space-lg: 24px;
  --space-xl: 32px;
  --space-2xl: 48px;

  /* Border radius */
  --radius: 4px;

  /* Typography */
  --font-base: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
  --font-mono: 'Courier New', Courier, monospace;
}


/* ===== Reset & Base ===== */
*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  font-size: 16px;
}

body {
  font-family: var(--font-base);
  background: var(--bg-paper);
  color: var(--text-primary);
  line-height: 1.6;
  min-height: 100vh;
  font-weight: 400;
}

a {
  color: inherit;
  text-decoration: none;
}

button {
  font-family: inherit;
  cursor: pointer;
  border: none;
  background: none;
  font-weight: 600;
}

input,
textarea,
select {
  font-family: inherit;
  border: none;
  outline: none;
  background: none;
}

/* ===== Block Base System ===== */
.block {
  background: var(--bg-white);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--shadow-color);
  padding: var(--space-lg);
}

.block:hover {
  transform: translate(-1px, -1px);
  box-shadow: calc(var(--shadow-offset) + 1px) calc(var(--shadow-offset) + 1px) 0 var(--shadow-color);
}

.block-flat {
  background: var(--bg-white);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  padding: var(--space-lg);
}

.block-mint {
  background: var(--bg-mint);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--shadow-color);
}

.block-green {
  background: var(--bg-green);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--shadow-color);
}

/* ===== Buttons ===== */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-sm);
  padding: var(--space-md) var(--space-lg);
  background: var(--bg-white);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  color: var(--text-primary);
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--shadow-color);
  transition: transform 50ms, box-shadow 50ms;
}

.btn:hover:not(:disabled) {
  transform: translate(-2px, -2px);
  box-shadow: calc(var(--shadow-offset) + 2px) calc(var(--shadow-offset) + 2px) 0 var(--shadow-color);
}

.btn:active:not(:disabled) {
  transform: translate(2px, 2px);
  box-shadow: 0 0 0 var(--shadow-color);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-primary {
  background: var(--accent-green);
  color: var(--text-primary);
}

.btn-danger {
  background: var(--accent-red);
  color: white;
}

.btn-secondary {
  background: var(--bg-mint);
}

.btn-small {
  padding: var(--space-sm) var(--space-md);
  font-size: 14px;
}

.btn-icon {
  padding: var(--space-md);
  width: 42px;
  height: 42px;
}

/* ===== Inputs ===== */
.input {
  width: 100%;
  padding: var(--space-md);
  background: var(--bg-white);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  color: var(--text-primary);
  font-size: 16px;
  transition: box-shadow 50ms;
}

.input:focus {
  box-shadow: 0 0 0 3px var(--accent-mint);
}

.input::placeholder {
  color: var(--text-muted);
}

textarea.input {
  resize: vertical;
  min-height: 80px;
  font-family: var(--font-mono);
}

/* ===== Select ===== */
.select {
  width: 100%;
  padding: var(--space-md);
  background: var(--bg-white);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  color: var(--text-primary);
  font-size: 16px;
  cursor: pointer;
  font-weight: 600;
}

.select:focus {
  box-shadow: 0 0 0 3px var(--accent-mint);
  outline: none;
}

/* ===== Layout ===== */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

.stack {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

.stack-lg {
  display: flex;
  flex-direction: column;
  gap: var(--space-xl);
}

.row {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.row-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-md);
}

/* ===== Utilities ===== */
.spinner {
  width: 20px;
  height: 20px;
  border: 3px solid var(--border-color);
  border-top-color: var(--text-primary);
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* ===== Landing Page ===== */
.landing {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-xl);
}

.hero {
  text-align: center;
  max-width: 700px;
}

.logo-container {
  margin-bottom: var(--space-xl);
}

.logo-icon {
  width: 100px;
  height: 100px;
}

.title {
  font-size: 3.5rem;
  font-weight: 800;
  letter-spacing: -0.02em;
  margin-bottom: var(--space-md);
  color: var(--text-primary);
}

.subtitle {
  font-size: 1.25rem;
  color: var(--text-secondary);
  margin-bottom: var(--space-2xl);
  line-height: 1.6;
}

.features {
  display: flex;
  gap: var(--space-lg);
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: var(--space-2xl);
}

.feature {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  color: var(--text-secondary);
  font-size: 1rem;
  font-weight: 500;
}

/* ===== Auth Button ===== */
.auth-button {
  display: inline-flex;
  align-items: center;
  gap: var(--space-md);
  padding: var(--space-md) var(--space-xl);
  font-size: 1.125rem;
  font-weight: 600;
  background: var(--accent-green);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  color: var(--text-primary);
  cursor: pointer;
  box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--shadow-color);
  transition: transform 50ms, box-shadow 50ms;
}

.auth-button:hover:not(.loading) {
  transform: translate(-2px, -2px);
  box-shadow: calc(var(--shadow-offset) + 2px) calc(var(--shadow-offset) + 2px) 0 var(--shadow-color);
}

.auth-button:active:not(.loading) {
  transform: translate(2px, 2px);
  box-shadow: 0 0 0 var(--shadow-color);
}

.auth-button.signin {
  background: var(--accent-green);
}

.auth-button.signout {
  padding: var(--space-sm) var(--space-lg);
  font-size: 0.875rem;
  background: var(--bg-white);
}

.auth-button.loading {
  opacity: 0.7;
  cursor: wait;
}

.google-icon {
  flex-shrink: 0;
}

.user-menu {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.user-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: var(--border-width) solid var(--border-color);
}

.user-name {
  color: var(--text-secondary);
  font-size: 0.875rem;
  font-weight: 600;
  display: none;
}

@media (min-width: 640px) {
  .user-name {
    display: block;
  }
}

/* ===== Dashboard ===== */
.dashboard {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--bg-paper);
}

.dashboard-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-lg) var(--space-xl);
  background: var(--bg-white);
  border-bottom: var(--border-width) solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.header-logo {
  flex-shrink: 0;
}

.header-left h1 {
  font-size: 1.5rem;
  font-weight: 800;
  color: var(--text-primary);
}

.dashboard-main {
  flex: 1;
  padding: var(--space-2xl);
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
}

.dashboard-footer {
  text-align: center;
  padding: var(--space-xl);
  color: var(--text-muted);
  font-size: 0.875rem;
  border-top: var(--border-width) solid var(--border-color);
  background: var(--bg-white);
}

/* ===== Password Table Container ===== */
.workspace-layout {
  display: flex;
  gap: var(--space-xl);
  align-items: flex-start;
}

.workspace-sidebar {
  width: 280px;
  background: var(--bg-white);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  padding: var(--space-lg);
  position: sticky;
  top: calc(88px + var(--space-xl));
}

.workspace-sidebar-header h3 {
  font-size: 1rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--space-md);
}

.workspace-create {
  display: flex;
  gap: var(--space-sm);
  margin-bottom: var(--space-lg);
}

.btn-add-small {
  padding: var(--space-sm) var(--space-md);
  background: var(--accent-green);
  color: var(--text-primary);
  font-weight: 700;
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  box-shadow: 3px 3px 0 var(--shadow-color);
  transition: transform 50ms, box-shadow 50ms;
  font-size: 0.875rem;
}

.btn-add-small:hover:not(:disabled) {
  transform: translate(-1px, -1px);
  box-shadow: 4px 4px 0 var(--shadow-color);
}

.btn-add-small:active:not(:disabled) {
  transform: translate(1px, 1px);
  box-shadow: 1px 1px 0 var(--shadow-color);
}

.btn-add-small:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.workspace-error {
  margin-top: var(--space-sm);
  color: var(--accent-red);
  font-size: 0.75rem;
  font-weight: 600;
}

.workspace-list {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.workspace-item-container {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
}

.workspace-item {
  width: 100%;
  padding: var(--space-sm) var(--space-md);
  text-align: left;
  border-radius: var(--radius);
  color: var(--text-secondary);
  font-weight: 600;
  font-size: 0.9rem;
  transition: all 50ms;
  flex: 1;
  border: 2px solid transparent;
}

.workspace-item:hover {
  color: var(--text-primary);
  background: var(--bg-gray);
}

.workspace-item.active {
  color: var(--text-primary);
  background: var(--bg-mint);
  border: 2px solid var(--border-color);
}

.workspace-delete-btn {
  padding: var(--space-sm);
  border-radius: var(--radius);
  color: var(--text-muted);
  background: transparent;
  transition: all 50ms;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  border: 2px solid transparent;
}

.workspace-item-container:hover .workspace-delete-btn {
  opacity: 1;
}

.workspace-delete-btn:hover {
  color: var(--accent-red);
  background: var(--bg-yellow);
  border: 2px solid var(--border-color);
}

.password-table-container {
  flex: 1;
}

.table-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-lg);
  padding: var(--space-lg);
  background: var(--bg-white);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--shadow-color);
}

.table-header h2 {
  font-size: 1.5rem;
  font-weight: 800;
  color: var(--text-primary);
}

.btn-add {
  display: inline-flex;
  align-items: center;
  gap: var(--space-sm);
  padding: var(--space-md) var(--space-lg);
  background: var(--accent-green);
  color: var(--text-primary);
  font-weight: 700;
  font-size: 1rem;
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--shadow-color);
  transition: transform 50ms, box-shadow 50ms;
}

.btn-add:hover:not(:disabled) {
  transform: translate(-2px, -2px);
  box-shadow: calc(var(--shadow-offset) + 2px) calc(var(--shadow-offset) + 2px) 0 var(--shadow-color);
}

.btn-add:active:not(:disabled) {
  transform: translate(2px, 2px);
  box-shadow: 0 0 0 var(--shadow-color);
}

.btn-add:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Search Filter */
.search-filter {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  padding: var(--space-lg);
  background: var(--bg-white);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  margin-bottom: var(--space-lg);
}

.search-filter svg:first-child {
  color: var(--text-muted);
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  padding: var(--space-sm) 0;
  background: transparent;
  color: var(--text-primary);
  font-size: 1rem;
  font-weight: 600;
}

.search-input::placeholder {
  color: var(--text-muted);
  font-weight: 400;
}

.search-input:focus {
  outline: none;
}

.clear-search {
  padding: var(--space-sm);
  color: var(--text-muted);
  border-radius: var(--radius);
  transition: all 50ms;
  border: 2px solid transparent;
}

.clear-search:hover {
  color: var(--text-primary);
  background: var(--bg-gray);
  border: 2px solid var(--border-color);
}

/* Table Styles */
.table-wrapper {
  overflow-x: auto;
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  background: var(--bg-white);
}

.password-table {
  width: 100%;
  border-collapse: collapse;
}

.password-table thead {
  background: var(--bg-gray);
}

.password-table th {
  padding: var(--space-md) var(--space-lg);
  text-align: left;
  font-weight: 800;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-primary);
  border-bottom: var(--border-width) solid var(--border-color);
}

.password-table th:last-child {
  text-align: right;
}

.password-row {
  transition: background 50ms;
  border-bottom: 2px solid var(--bg-paper);
}

.password-row:hover {
  background: var(--bg-mint);
}

.password-row td {
  padding: var(--space-md) var(--space-lg);
  border-bottom: 2px solid var(--bg-paper);
  vertical-align: middle;
}

.password-row.editing {
  background: var(--bg-blue);
}

.password-row.editing td {
  background: var(--bg-blue);
}

.workspace-separator td {
  padding: var(--space-sm) var(--space-lg);
  background: var(--bg-green);
  color: var(--text-primary);
  font-size: 0.7rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  font-weight: 800;
  border-bottom: var(--border-width) solid var(--border-color);
  border-top: var(--border-width) solid var(--border-color);
}

.cell-content {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.username {
  font-weight: 700;
  color: var(--text-primary);
}

.password-dots {
  color: var(--text-muted);
  letter-spacing: 0.1em;
  font-family: var(--font-mono);
}

.description {
  color: var(--text-secondary);
  font-weight: 500;
}

.tag-badge {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.625rem;
  background: var(--bg-yellow);
  color: var(--text-primary);
  font-size: 0.7rem;
  font-weight: 800;
  border-radius: var(--radius);
  border: 2px solid var(--border-color);
  margin-left: var(--space-sm);
  white-space: nowrap;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.actions-cell {
  text-align: right;
  white-space: nowrap;
}

/* Input Fields */
.input-field {
  width: 100%;
  padding: var(--space-sm) var(--space-md);
  background: var(--bg-white);
  border: 2px solid var(--border-color);
  border-radius: var(--radius);
  color: var(--text-primary);
  font-size: 0.875rem;
  font-weight: 600;
  transition: box-shadow 50ms;
}

.input-field:focus {
  box-shadow: 0 0 0 3px var(--accent-mint);
  outline: none;
}

.input-field::placeholder {
  color: var(--text-muted);
  font-weight: 400;
}

.password-input-group {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
}

.input-with-icon {
  padding-right: 2.5rem;
}

.btn-toggle-visibility {
  position: absolute;
  right: var(--space-sm);
  padding: var(--space-xs);
  color: var(--text-muted);
  background: transparent;
  border-radius: var(--radius);
  cursor: pointer;
  transition: all 50ms;
}

.btn-toggle-visibility:hover {
  color: var(--text-primary);
  background: var(--bg-gray);
}

/* Action Buttons */
.btn-save {
  display: inline-flex;
  align-items: center;
  gap: var(--space-sm);
  padding: var(--space-sm) var(--space-md);
  background: var(--accent-green);
  color: var(--text-primary);
  font-weight: 700;
  font-size: 0.875rem;
  border: 2px solid var(--border-color);
  border-radius: var(--radius);
  box-shadow: 3px 3px 0 var(--shadow-color);
  transition: transform 50ms, box-shadow 50ms;
  margin-right: var(--space-sm);
}

.btn-save:hover:not(:disabled) {
  transform: translate(-1px, -1px);
  box-shadow: 4px 4px 0 var(--shadow-color);
}

.btn-save:active:not(:disabled) {
  transform: translate(1px, 1px);
  box-shadow: 1px 1px 0 var(--shadow-color);
}

.btn-save:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.btn-cancel-small {
  padding: var(--space-sm) var(--space-md);
  background: var(--bg-white);
  color: var(--text-secondary);
  font-weight: 600;
  font-size: 0.875rem;
  border: 2px solid var(--border-color);
  border-radius: var(--radius);
  transition: all 50ms;
}

.btn-cancel-small:hover {
  background: var(--bg-gray);
  color: var(--text-primary);
}

.btn-edit,
.btn-delete-icon {
  padding: var(--space-sm);
  color: var(--text-muted);
  border-radius: var(--radius);
  transition: all 50ms;
  margin-left: var(--space-xs);
  border: 2px solid transparent;
}

.btn-edit:hover {
  color: var(--text-primary);
  background: var(--bg-blue);
  border: 2px solid var(--border-color);
}

.btn-delete-icon:hover {
  color: var(--accent-red);
  background: var(--bg-yellow);
  border: 2px solid var(--border-color);
}

/* Copy Button */
.copy-button {
  display: inline-flex;
  align-items: center;
  gap: var(--space-xs);
  padding: var(--space-xs) var(--space-sm);
  font-size: 0.75rem;
  font-weight: 700;
  border-radius: var(--radius);
  transition: all 50ms;
  color: var(--text-muted);
  background: var(--bg-white);
  border: 2px solid var(--border-color);
  box-shadow: 2px 2px 0 var(--shadow-color);
}

.copy-button:hover:not(:disabled) {
  transform: translate(-1px, -1px);
  box-shadow: 3px 3px 0 var(--shadow-color);
  color: var(--text-primary);
}

.copy-button:active:not(:disabled) {
  transform: translate(1px, 1px);
  box-shadow: 0 0 0 var(--shadow-color);
}

.copy-button.user:hover:not(:disabled) {
  background: var(--bg-mint);
}

.copy-button.password:hover:not(:disabled) {
  background: var(--bg-blue);
}

.copy-button.copied {
  background: var(--accent-green);
  color: var(--text-primary);
  border-color: var(--border-color);
}

.copy-button.loading {
  opacity: 0.7;
  cursor: wait;
}

.copy-label {
  display: none;
}

@media (min-width: 768px) {
  .copy-label {
    display: inline;
  }
}

/* Empty State */
.empty-state {
  padding: var(--space-2xl) var(--space-xl);
  text-align: center;
  color: var(--text-muted);
  background: var(--bg-white);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
}

.empty-state svg {
  margin-bottom: var(--space-lg);
  opacity: 0.3;
}

.empty-state h3 {
  font-size: 1.25rem;
  color: var(--text-primary);
  font-weight: 700;
  margin-bottom: var(--space-sm);
}

.empty-state p {
  font-size: 1rem;
  color: var(--text-secondary);
}

/* Loading & Error */
.loading-container,
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-2xl);
  color: var(--text-muted);
}

.loading-spinner,
.loading-spinner-large {
  border: 3px solid var(--border-color);
  border-top-color: var(--text-primary);
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
  margin-bottom: var(--space-lg);
}

.loading-spinner {
  width: 40px;
  height: 40px;
}

.loading-spinner-large {
  width: 60px;
  height: 60px;
  border-width: 4px;
}

.btn-retry {
  margin-top: var(--space-lg);
  padding: var(--space-md) var(--space-lg);
  background: var(--accent-green);
  color: var(--text-primary);
  font-weight: 700;
  font-size: 1rem;
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--shadow-color);
}

.btn-retry:hover {
  transform: translate(-2px, -2px);
  box-shadow: calc(var(--shadow-offset) + 2px) calc(var(--shadow-offset) + 2px) 0 var(--shadow-color);
}

/* Modal */
.modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: var(--space-lg);
}

.modal-content {
  background: var(--bg-white);
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  padding: var(--space-2xl);
  max-width: 450px;
  width: 100%;
  box-shadow: 8px 8px 0 var(--shadow-color);
}

.modal-header {
  text-align: center;
  margin-bottom: var(--space-lg);
}

.warning-icon {
  color: var(--accent-red);
  margin-bottom: var(--space-md);
}

.modal-header h3 {
  font-size: 1.5rem;
  font-weight: 800;
  color: var(--text-primary);
}

.modal-message {
  color: var(--text-secondary);
  text-align: center;
  margin-bottom: var(--space-sm);
  font-weight: 500;
}

.modal-warning {
  color: var(--text-muted);
  font-size: 0.875rem;
  text-align: center;
  margin-bottom: var(--space-xl);
}

.modal-actions {
  display: flex;
  gap: var(--space-md);
  justify-content: center;
}

.btn-cancel {
  padding: var(--space-md) var(--space-xl);
  background: var(--bg-white);
  color: var(--text-primary);
  font-weight: 700;
  font-size: 1rem;
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  box-shadow: 3px 3px 0 var(--shadow-color);
  transition: transform 50ms, box-shadow 50ms;
}

.btn-cancel:hover {
  transform: translate(-1px, -1px);
  box-shadow: 4px 4px 0 var(--shadow-color);
}

.btn-delete {
  padding: var(--space-md) var(--space-xl);
  background: var(--accent-red);
  color: white;
  font-weight: 700;
  font-size: 1rem;
  border: var(--border-width) solid var(--border-color);
  border-radius: var(--radius);
  box-shadow: 3px 3px 0 var(--shadow-color);
  transition: transform 50ms, box-shadow 50ms;
}

.btn-delete:hover {
  transform: translate(-1px, -1px);
  box-shadow: 4px 4px 0 var(--shadow-color);
}

/* Responsive */
@media (max-width: 768px) {
  .title {
    font-size: 2.5rem;
  }

  .subtitle {
    font-size: 1rem;
  }

  .dashboard-header {
    padding: var(--space-md) var(--space-lg);
  }

  .dashboard-main {
    padding: var(--space-lg);
  }

  .workspace-layout {
    flex-direction: column;
  }

  .workspace-sidebar {
    width: 100%;
    position: static;
  }

  .table-header {
    flex-direction: column;
    gap: var(--space-md);
    align-items: stretch;
  }

  .btn-add {
    justify-content: center;
  }

  .password-table th,
  .password-table td {
    padding: var(--space-sm) var(--space-md);
  }
}

/* Tag Manager styles */
.landing {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  padding: 2rem;
}

.hero {
  text-align: center;
  z-index: 10;
  max-width: 600px;
}

.logo-container {
  margin-bottom: 1.5rem;
  animation: float 6s ease-in-out infinite;
}

@keyframes float {

  0%,
  100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-10px);
  }
}

.logo-icon {
  filter: drop-shadow(0 0 20px rgba(99, 102, 241, 0.4));
}

.title {
  font-size: 4rem;
  font-weight: 800;
  letter-spacing: -0.03em;
  margin-bottom: 0.5rem;
  background: var(--accent-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.highlight {
  color: var(--accent-secondary);
}

.subtitle {
  font-size: 1.25rem;
  color: var(--text-secondary);
  margin-bottom: 2.5rem;
  max-width: 450px;
  margin-left: auto;
  margin-right: auto;
}

.features {
  display: flex;
  gap: 2rem;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 3rem;
}

.feature {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--text-secondary);
  font-size: 0.9rem;
}

.feature svg {
  color: var(--accent-primary);
}

/* Background effects */
.background-effects {
  position: fixed;
  inset: 0;
  pointer-events: none;
  overflow: hidden;
}

.gradient-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(80px);
  opacity: 0.3;
}

.orb-1 {
  width: 400px;
  height: 400px;
  background: var(--accent-primary);
  top: -200px;
  right: -100px;
  animation: float 8s ease-in-out infinite;
}

.orb-2 {
  width: 300px;
  height: 300px;
  background: var(--accent-secondary);
  bottom: -150px;
  left: -100px;
  animation: float 10s ease-in-out infinite reverse;
}

.orb-3 {
  width: 200px;
  height: 200px;
  background: #22d3ee;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: pulse 6s ease-in-out infinite;
}

@keyframes pulse {

  0%,
  100% {
    opacity: 0.2;
    transform: translate(-50%, -50%) scale(1);
  }

  50% {
    opacity: 0.4;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

/* ===== Auth Button ===== */
.auth-button {
  display: inline-flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.875rem 1.75rem;
  font-size: 1rem;
  font-weight: 600;
  border-radius: var(--radius-full);
  transition: all var(--transition-normal);
}

.auth-button.signin {
  background: var(--text-primary);
  color: var(--bg-primary);
}

.auth-button.signin:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg), var(--shadow-glow);
}

.auth-button.signout {
  background: var(--bg-tertiary);
  color: var(--text-primary);
  padding: 0.5rem 1rem;
  font-size: 0.875rem;
}

.auth-button.signout:hover {
  background: var(--bg-elevated);
}

.auth-button.loading {
  opacity: 0.7;
}

.google-icon {
  flex-shrink: 0;
}

.user-menu {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.user-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: 2px solid var(--border-color);
}

.user-name {
  color: var(--text-secondary);
  font-size: 0.875rem;
  display: none;
}

@media (min-width: 640px) {
  .user-name {
    display: block;
  }
}

/* ===== Dashboard ===== */
.dashboard {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.dashboard-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem 2rem;
  background: var(--bg-secondary);
  border-bottom: 1px solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(10px);
}

.header-left {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.header-left h1 {
  font-size: 1.25rem;
  font-weight: 700;
  background: var(--accent-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.dashboard-main {
  flex: 1;
  padding: 2rem;
  max-width: 1200px;
  margin: 0 auto;
  width: 100%;
}

.dashboard-footer {
  text-align: center;
  padding: 1.5rem;
  color: var(--text-muted);
  font-size: 0.8rem;
  border-top: 1px solid var(--border-color);
}

/* ===== Password Table ===== */
.workspace-layout {
  display: flex;
  gap: 1.5rem;
  align-items: flex-start;
}

.workspace-sidebar {
  width: 240px;
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-color);
  padding: 1rem;
  position: sticky;
  top: 5.5rem;
}

.workspace-sidebar-header h3 {
  font-size: 0.95rem;
  font-weight: 600;
  color: var(--text-secondary);
}

.workspace-create {
  display: flex;
  gap: 0.5rem;
  margin-top: 0.75rem;
}

.btn-add-small {
  padding: 0 0.75rem;
  background: var(--accent-gradient);
  color: white;
  font-weight: 600;
  border-radius: var(--radius-sm);
  transition: all var(--transition-fast);
}

.btn-add-small:hover:not(:disabled) {
  transform: translateY(-1px);
  box-shadow: var(--shadow-sm);
}

.btn-add-small:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.workspace-error {
  margin-top: 0.5rem;
  color: var(--danger);
  font-size: 0.75rem;
}

.workspace-list {
  list-style: none;
  margin-top: 1rem;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.workspace-item-container {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  position: relative;
}

.workspace-item {
  width: 100%;
  padding: 0.5rem 0.75rem;
  text-align: left;
  border-radius: var(--radius-sm);
  color: var(--text-secondary);
  transition: all var(--transition-fast);
  flex: 1;
}

.workspace-item:hover {
  color: var(--text-primary);
  background: var(--bg-tertiary);
}

.workspace-item.active {
  color: var(--text-primary);
  background: var(--bg-tertiary);
  border: 1px solid var(--border-color-hover);
}

.workspace-delete-btn {
  padding: 0.35rem;
  border-radius: var(--radius-sm);
  color: var(--text-muted);
  background: transparent;
  transition: all var(--transition-fast);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
}

.workspace-item-container:hover .workspace-delete-btn {
  opacity: 1;
}

.workspace-delete-btn:hover {
  color: var(--danger);
  background: rgba(239, 68, 68, 0.1);
}

.workspace-selected {
  margin-top: 0.25rem;
  color: var(--text-muted);
  font-size: 0.8rem;
}

.password-table-container {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-color);
  overflow: hidden;
  flex: 1;
}

.table-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.25rem 1.5rem;
  border-bottom: 1px solid var(--border-color);
}

.table-header h2 {
  font-size: 1.25rem;
  font-weight: 600;
}

.btn-add {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.625rem 1.25rem;
  background: var(--accent-gradient);
  color: white;
  font-weight: 600;
  font-size: 0.875rem;
  border-radius: var(--radius-md);
  transition: all var(--transition-fast);
}

.btn-add:hover:not(:disabled) {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.btn-add:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.search-filter {
  position: relative;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 1.5rem;
  border-bottom: 1px solid var(--border-color);
}

.search-filter svg:first-child {
  color: var(--text-muted);
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  padding: 0.625rem 0;
  background: transparent;
  color: var(--text-primary);
  font-size: 0.9375rem;
}

.search-input::placeholder {
  color: var(--text-muted);
}

.clear-search {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.375rem;
  color: var(--text-muted);
  border-radius: var(--radius-sm);
  transition: all var(--transition-fast);
}

.clear-search:hover {
  color: var(--text-primary);
  background: var(--bg-tertiary);
}

.table-wrapper {
  overflow-x: auto;
}

.password-table {
  width: 100%;
  border-collapse: collapse;
}

.password-table thead {
  background: var(--bg-tertiary);
}

.password-table th {
  padding: 0.875rem 1rem;
  text-align: left;
  font-weight: 600;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-secondary);
  border-bottom: 1px solid var(--border-color);
}

.password-table th:last-child {
  text-align: right;
  padding-right: 1.5rem;
}

.password-row {
  transition: background var(--transition-fast);
}

.password-row:hover {
  background: rgba(255, 255, 255, 0.02);
}

.password-row td {
  padding: 1rem;
  border-bottom: 1px solid var(--border-color);
  vertical-align: middle;
}

.password-row.editing td {
  background: var(--bg-tertiary);
}

.workspace-separator td {
  padding: 0.5rem 1rem;
  background: var(--bg-tertiary);
  color: var(--text-muted);
  font-size: 0.7rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  border-bottom: 1px solid var(--border-color);
}

.cell-content {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.username {
  font-weight: 500;
}

.password-dots {
  color: var(--text-muted);
  letter-spacing: 0.1em;
}

.description {
  color: var(--text-secondary);
}

.tag-badge {
  display: inline-flex;
  align-items: center;
  padding: 0.125rem 0.5rem;
  background: rgba(168, 85, 247, 0.15);
  color: var(--accent-secondary);
  font-size: 0.7rem;
  font-weight: 500;
  border-radius: var(--radius-full);
  border: 1px solid rgba(168, 85, 247, 0.3);
  margin-left: 0.5rem;
  white-space: nowrap;
}

.actions-cell {
  text-align: right;
  padding-right: 1.5rem !important;
  white-space: nowrap;
}

.input-field {
  width: 100%;
  padding: 0.625rem 0.875rem;
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  color: var(--text-primary);
  font-size: 0.875rem;
  transition: border-color var(--transition-fast);
}

.input-field:focus {
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.input-field::placeholder {
  color: var(--text-muted);
}

.password-input-group {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
}

.input-with-icon {
  padding-right: 2.5rem;
}

.btn-toggle-visibility {
  position: absolute;
  right: 0.5rem;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.25rem;
  color: var(--text-muted);
  background: transparent;
  border: none;
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: color var(--transition-fast), background var(--transition-fast);
}

.btn-toggle-visibility:hover {
  color: var(--accent-primary);
  background: rgba(99, 102, 241, 0.1);
}

/* ===== Buttons ===== */
.btn-save {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: var(--success);
  color: white;
  font-weight: 600;
  font-size: 0.8rem;
  border-radius: var(--radius-sm);
  transition: all var(--transition-fast);
  margin-right: 0.5rem;
}

.btn-save:hover:not(:disabled) {
  filter: brightness(1.1);
}

.btn-save:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.btn-cancel-small {
  padding: 0.5rem 1rem;
  background: var(--bg-elevated);
  color: var(--text-secondary);
  font-weight: 500;
  font-size: 0.8rem;
  border-radius: var(--radius-sm);
  transition: all var(--transition-fast);
}

.btn-cancel-small:hover:not(:disabled) {
  background: var(--bg-tertiary);
  color: var(--text-primary);
}

.btn-edit,
.btn-delete-icon {
  padding: 0.5rem;
  color: var(--text-muted);
  border-radius: var(--radius-sm);
  transition: all var(--transition-fast);
  margin-left: 0.25rem;
}

.btn-edit:hover {
  color: var(--accent-primary);
  background: rgba(99, 102, 241, 0.1);
}

.btn-delete-icon:hover {
  color: var(--danger);
  background: rgba(239, 68, 68, 0.1);
}

/* ===== Copy Button ===== */
.copy-button {
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.375rem 0.625rem;
  font-size: 0.75rem;
  font-weight: 500;
  border-radius: var(--radius-sm);
  transition: all var(--transition-fast);
  color: var(--text-muted);
  background: var(--bg-tertiary);
}

.copy-button:hover:not(:disabled) {
  background: var(--bg-elevated);
  color: var(--text-primary);
}

.copy-button.user:hover:not(:disabled) {
  color: var(--accent-primary);
}

.copy-button.password:hover:not(:disabled) {
  color: var(--accent-secondary);
}

.copy-button.copied {
  color: var(--success) !important;
  background: rgba(34, 197, 94, 0.1);
}

.copy-button.loading {
  opacity: 0.7;
  cursor: wait;
}

.copy-label {
  display: none;
}

@media (min-width: 768px) {
  .copy-label {
    display: inline;
  }
}

/* ===== Empty State ===== */
.empty-state {
  padding: 4rem 2rem;
  text-align: center;
  color: var(--text-muted);
}

.empty-state svg {
  margin-bottom: 1.5rem;
  opacity: 0.5;
}

.empty-state h3 {
  font-size: 1.25rem;
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
}

.empty-state p {
  font-size: 0.9rem;
}

/* ===== Loading & Error ===== */
.loading-container,
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 4rem;
  color: var(--text-muted);
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid var(--border-color);
  border-top-color: var(--accent-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 1rem;
}

.loading-spinner-large {
  width: 60px;
  height: 60px;
  border: 4px solid var(--border-color);
  border-top-color: var(--accent-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.btn-retry {
  margin-top: 1rem;
  padding: 0.625rem 1.25rem;
  background: var(--accent-gradient);
  color: white;
  font-weight: 600;
  font-size: 0.875rem;
  border-radius: var(--radius-md);
}

/* ===== Modal ===== */
.modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 1rem;
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.modal-content {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-color);
  padding: 2rem;
  max-width: 400px;
  width: 100%;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  text-align: center;
  margin-bottom: 1.5rem;
}

.warning-icon {
  color: var(--danger);
  margin-bottom: 1rem;
}

.modal-header h3 {
  font-size: 1.25rem;
  font-weight: 600;
}

.modal-message {
  color: var(--text-secondary);
  text-align: center;
  margin-bottom: 0.75rem;
}

.modal-warning {
  color: var(--text-muted);
  font-size: 0.875rem;
  text-align: center;
  margin-bottom: 1.5rem;
}

.modal-actions {
  display: flex;
  gap: 0.75rem;
  justify-content: center;
}

.btn-cancel {
  padding: 0.75rem 1.5rem;
  background: var(--bg-tertiary);
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.875rem;
  border-radius: var(--radius-md);
  transition: all var(--transition-fast);
}

.btn-cancel:hover {
  background: var(--bg-elevated);
}

.btn-delete {
  padding: 0.75rem 1.5rem;
  background: var(--danger);
  color: white;
  font-weight: 600;
  font-size: 0.875rem;
  border-radius: var(--radius-md);
  transition: all var(--transition-fast);
}

.btn-delete:hover {
  filter: brightness(1.1);
}

.observation-content {
  padding: 2rem;
}

/* ===== Responsive ===== */
@media (max-width: 640px) {
  .title {
    font-size: 2.5rem;
  }

  .subtitle {
    font-size: 1rem;
  }

  .features {
    flex-direction: column;
    gap: 1rem;
  }

  .dashboard-header {
    padding: 1rem;
  }

  .dashboard-main {
    padding: 1rem;
  }

  .workspace-layout {
    flex-direction: column;
  }

  .workspace-sidebar {
    width: 100%;
    position: static;
  }

  .table-header {
    flex-direction: column;
    gap: 1rem;
    align-items: stretch;
  }

  .btn-add {
    justify-content: center;
  }

  .password-table th,
  .password-table td {
    padding: 0.75rem 0.5rem;
  }
}